{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "‚ñ∂Ô∏è Run GlyphX",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "glyphx.app"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "üß™ Run Tests",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest",
                "glyphx/tests/",
                "-v"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "test"
        },
        {
            "label": "üì¶ Install Dependencies",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-e",
                ".[dev]"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
